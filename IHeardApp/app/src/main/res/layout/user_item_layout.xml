<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"

    android:layout_marginTop="10dp">
<!--    android:background="@drawable/button_black_background"-->

    <View
        android:layout_width="500dp"
        android:layout_height="80dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="20dp"

        android:background="@color/colorPrimaryDark"
        />


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/username_profile_image_search"
            android:layout_width="120dp"
            android:layout_height="80dp"

            android:layout_marginTop="17dp"

            android:padding="5dp"
            android:src="@drawable/profile" />

        <TextView
            android:id="@+id/user_name_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginStart="70dp"
            android:gravity="center"
            android:text="user name"
            android:textColor="@android:color/white"
            android:textSize="12dp"

            />

        <TextView
            android:id="@+id/user_full_name_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_name_search"
            android:layout_marginTop="2dp"
            android:layout_marginStart="70dp"
            android:gravity="center"
            android:text="user profile name"
            android:textColor="@android:color/white"
            android:textSize="12dp"
            android:textStyle="bold"

            />

        <Button
            android:id="@+id/follow_btn_search"
            android:layout_width="90dp"
            android:layout_height="22dp"
            android:layout_below="@+id/user_full_name_search"
            android:layout_centerHorizontal="true"

            android:layout_margin="10dp"
            android:background="@android:color/white"
            android:text="Follow"
            android:textAllCaps="false"

            />

        <Button
            android:id="@+id/chat_btn_search"
            android:layout_width="90dp"
            android:layout_height="22dp"
            android:layout_below="@+id/user_full_name_search"
            android:layout_toRightOf="@+id/follow_btn_search"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:background="@android:color/white"
            android:text="Message"
            android:textAllCaps="false"

            />

    </RelativeLayout>
</RelativeLayout>